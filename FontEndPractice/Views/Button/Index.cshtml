@model List<FontEndPractice.Models.ButtonModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <p>Testing</p>
        @Html.Label("Buttons Game")
        @using (Html.BeginForm("ButtonClick", "Button"))
        {
            for (int i = 0; i < Model.Count; i++)
            {
                if (i % 5 == 0)
                {
                    <br />
                }

                <button type="submit" name="onOff" value=@i>
                    @if (Model[i].State == true)
                    {
                        <img src="~/Images/OnButton2.png" />
                    }
                    else
                    {
                        <img src="~/Images/OffButton2.png" />
                    }
                </button>
            }

        }

        @Html.ActionLink("Go Back", "index", "Home")
        @Html.ActionLink("New Random List", "Index", "Button")
    </div>
</body>
</html>
